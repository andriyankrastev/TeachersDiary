@model IList<ClassViewModel>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Класове</h2>
        </div>
        <div class="ibox-content">
            <table class="table table-bordered">
                <thead>
                <tr>
                    <th>#</th>
                    <th>Клас</th>
                    <th>Действие</th>
                </tr>
                </thead>

                <tbody>
                

                @for (int i = 0; i < Model.Count; i++)
                {               
                    <tr>
                        <td>
                            @(i + 1)
                        </td>
                        <td>
                            @(Html.ActionLink<StudentController>(Model[i].Name, c => c.Index(Model[i].EncodedId), new {area = string.Empty}, new {@class = "btn btn-default"}))
                        </td>
                        <td>
                            @(Html.ActionLink<ClassController>("Изтрий", c => c.Delete(Model[i].EncodedId), new {area = string.Empty}, new {@class = "btn btn-danger"}))
                        </td>
                    </tr>
                   }
               
                </tbody>
            </table>

        </div>
    </div>
</div>