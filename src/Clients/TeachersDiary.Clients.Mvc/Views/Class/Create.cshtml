@{
    Layout = LayoutConstants.Layout;
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox">
            <div class="ibox-title">
                <h5>Създавате на клас от същеструващ файл</h5>
            </div>
            <div class="ibox-content">
                <p>
                    Моля изберете желания файл с ученици в долу посочената зона.
                </p>
                @using (Html.BeginForm<ClassController>(x => x.Create(), FormMethod.Post, null, new { enctype = "multipart/form-data" }))
                {
                    @Html.AntiForgeryToken()

                    @Html.ValidationSummary(true, null, new { @class = "text-danger" })

                    <br />

                    <input type="file" name="file" id="file" />

                    <br />

                    <input type="submit" value="Изпрати"/>
                }
            </div>
        </div>
    </div>
</div>
