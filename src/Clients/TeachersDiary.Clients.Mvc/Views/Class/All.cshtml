@model IList<ClassViewModel>

@{
    Layout = LayoutConstants.Layout;
}

<div class="row">
    <div class="ibox float-e-margins">
        <div class="ibox-title">
            <h2>Класове</h2>
        </div>
        <div class="ibox-content">
            @if (Model.Count > 0)
            {
                <table class="table table-bordered">
                    <thead>
                        <tr>
                            <th>#</th>
                            <th>Клас</th>
                            <th>Действие</th>
                        </tr>
                    </thead>

                    <tbody>
                        @for (int i = 0; i < Model.Count; i++)
                        {
                            <tr>
                                <td>
                                    @(i + 1)
                                </td>
                                <td>
                                    @(Html.ActionLink<ClassController>(Model[i].Name, c => c.Index(Model[i].EncodedId), new {area = string.Empty}, new {@class = "btn btn-default"}))
                                </td>
                                <td>
                                    @(Html.ActionLink<ClassController>("Изтрий", c => c.Delete(Model[i].EncodedId), new {area = string.Empty}, new {@class = "btn btn-danger"}))
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div>
                    Няма налични класове.
                </div>
            }
        </div>
    </div>
</div>