@model RegisterViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    @Styles.Render("~/Content/forms-css")
}

<div id="wrapper">
    <div>
        <section>
            @using (Html.BeginForm<AccountController>(c => c.Register(), FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <h1>@GlobalResources.NewProfileLabel</h1>

                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Имейл." })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
              
                <br/>

                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола." })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })  
                </div>

                <br />

                <div>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Повтори парола." })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <br />

                <div>
                    @Html.DropDownListFor(x => x.SelectedSchool, Model.Schools, GlobalResources.SelectSchool)
                    @Html.ValidationMessageFor(model => model.SelectedSchool, "", new {@class = "text-danger"})
                </div>

                <br />

                <div>
                    <button id="submit-btn" type="submit">
                        @GlobalResources.CreateButton
                    </button>
                </div>

                <br />

                <div>
                    <p>
                        @(Html.ActionLink<AccountController>(GlobalResources.LogInLabel, c => c.Login()))
                        @(Html.ActionLink<LandingController>(GlobalResources.HomeLabel, c => c.Index()))
                    </p>
                </div>
            }
        </section>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}              
