@model LoginViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    string returnUrl = (string)ViewBag.ReturnUrl;
}

@section Styles {
    @Styles.Render("~/Content/forms-css")
}

<div id="wrapper">
    <div id="login">
        <section>
            @using (Html.BeginForm<AccountController>(c => c.Login(returnUrl), FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                <h1>@GlobalResources.LogInLabel</h1>

                <div>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Имейл" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>
               
                <br/>

                <div>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Парола" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                </div>

                <br />

                <div>
                    <button id="submit-btn" type="submit">
                        @GlobalResources.LogInLabel
                    </button>
                </div>

                <br />

                <div>
                    <p>
                        @(Html.ActionLink<AccountController>(GlobalResources.SignUpLabel, c => c.Register()))
                        @(Html.ActionLink<HomeController>(GlobalResources.HomeLabel, c => c.Index()))
                    </p>
                </div>
            }
        </section>
    </div>
</div>

@section scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
